<p style="color: green"><%= notice %></p>

<h1>Monuments</h1>

<div
  class="container"
  data-controller="insert-in-list"
>
  <%# List %>
  <div id="monuments" data-insert-in-list-target="items">
    <% @monuments.each do |monument| %>
      <%= render monument %>
      <p>
        <%= link_to "Show this monument", monument %>
      </p>
    <% end %>
  </div>

  <%# Form %>
  <div data-controller="toggle" class="mt-5">
    <button data-action="toggle#fire" class="btn btn-primary">
      Add a monument
    </button>
    <div data-toggle-target="toggleElement" class="d-none">
      <%= render "form", monument: @monument %>
    </div>
  </div>
</div>

<div data-controller="toggle" class="mt-5">
  <button data-action="toggle#fire" class="btn btn-primary">
    Say Hello
  </button>
  <div data-toggle-target="toggleElement" class="d-none">
    <p>Hello There</p>
  </div>
</div>
