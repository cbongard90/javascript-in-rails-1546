<p style="color: green"><%= notice %></p>

<%= render @monument %>

<div>
  <%= link_to "Edit this monument", edit_monument_path(@monument) %> |
  <%= link_to "Back to monuments", monuments_path %>

  <%= button_to "Destroy this monument", @monument, method: :delete %>
</div>

<div data-controller="toggle" class="mt-5">
  <button data-action="toggle#fire" class="btn btn-primary">
    Say Hello
  </button>
  <div data-toggle-target="toggleElement" class="d-none">
    <p>Hello There</p>
  </div>
</div>
